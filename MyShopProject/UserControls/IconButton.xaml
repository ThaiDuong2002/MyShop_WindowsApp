<UserControl x:Class="MyShopProject.UserControls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyShopProject.UserControls"
             mc:Ignorable="d"
             
                          Name="iconButton"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Name="btn" Style="{StaticResource filterButton}" Command="{Binding OrderCommand}" CommandParameter="{Binding ElementName=iconButton, Path=NameView}">
            <StackPanel Orientation="Horizontal">
                <Icon:PackIconMaterial Kind="{Binding ElementName=iconButton, Path=Icon}" Style="{StaticResource menuButtonIcon}" VerticalAlignment="Center"></Icon:PackIconMaterial>
                <TextBlock Text="{Binding ElementName=iconButton, Path=Title}" Style="{StaticResource menuButtonText}" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
