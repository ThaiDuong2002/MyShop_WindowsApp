<Page
    x:Class="MyShopProject.View.ProductCategoryManagementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converter="clr-namespace:MyShopProject.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyShopProject.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="QLLOAISP"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{StaticResource ProductCategoryManagementVM}"
    FontFamily="{StaticResource MaterialDesignFont}"
    mc:Ignorable="d">

    <Page.Resources>
        <Converter:ImgBrandConverter x:Key="ImgBrandConverter" />
    </Page.Resources>

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="0,20,0,0"
            Padding="20,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            TextAlignment="Left">
            DANH SÁCH NHÃN HÀNG
        </TextBlock>
        <Button
            Grid.Row="0"
            Margin="0,20,20,0"
            HorizontalAlignment="Right"
            Background="BlueViolet"
            BorderThickness="0"
            Command="{Binding ImportBrandCommand}">
            <StackPanel
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="25"
                    Height="25"
                    Kind="FileImportOutline" />
                <TextBlock
                    VerticalAlignment="Center"
                    Text="Nhập sản phẩm" />
            </StackPanel>
        </Button>
        <TextBlock
            Name="amountCustomerText"
            Grid.Row="1"
            Margin="0,20,0,0"
            Padding="20,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="18"
            FontWeight="Bold"
            Text="{Binding AmountProduct}"
            TextAlignment="Left" />
        <StackPanel
            Grid.Row="1"
            Margin="0,10,20,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="addCustomerButton"
                    Grid.Row="0"
                    Margin="0,40,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="BlueViolet"
                    BorderThickness="0"
                    Command="{Binding AddCommand}"
                    Content="Thêm nhãn hàng" />
                <StackPanel VerticalAlignment="Bottom">
                    <TextBox
                        Name="searchCustomerInput"
                        Width="200"
                        Height="25"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Tìm kiếm tên nhãn hàng"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                        Text="{Binding SearchBrandText, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <Button
                    x:Name="searchCustomertButton"
                    Margin="20,40,0,0"
                    Background="BlueViolet"
                    BorderThickness="0"
                    Command="{Binding searchBtn}"
                    Content="Tìm kiếm"
                    Focusable="False" />
            </StackPanel>
        </StackPanel>

        <ListView
            Name="listView"
            Grid.Row="2"
            MinHeight="500"
            Margin="20"
            BorderThickness="0"
            ItemsSource="{Binding Brands, UpdateSourceTrigger=PropertyChanged}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedBrand}"
            SelectionMode="Single">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card
                        Width="250"
                        Height="280"
                        Margin="10"
                        Padding="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ShadowAssist.ShadowDepth="Depth1"
                        Background="White"
                        BorderThickness="0">

                        <StackPanel Orientation="Vertical">
                            <Image
                                Width="180"
                                Height="180"
                                Source="{Binding Logo, Converter={StaticResource ImgBrandConverter}}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    FontSize="16"
                                    Text="Mã loại sản phẩm: " />
                                <TextBlock
                                    FontSize="16"
                                    Text="{Binding Id}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    FontSize="16"
                                    Text="Tên nhãn hàng: " />
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="Red"
                                    Text="{Binding Name}" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button
                                    Margin="0,10,0,0"
                                    Background="Green"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                    CommandParameter="{Binding}"
                                    Content="Sửa" />
                                <Button
                                    Margin="10,10,0,0"
                                    Background="Red"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                    CommandParameter="{Binding}"
                                    Content="Xóa" />
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>

                </DataTemplate>


            </ListView.ItemTemplate>
        </ListView>
        <StackPanel
            Name="pagination"
            Grid.Row="3"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="10"
                Background="BlueViolet"
                BorderThickness="0"
                Command="{Binding prevBtn}"
                Content="Trang trước" />
            <Label
                x:Name="contentPage"
                Margin="10"
                BorderThickness="0"
                Content="{Binding PageInfo}"
                FontSize="16" />
            <Button
                Margin="10"
                Background="BlueViolet"
                BorderThickness="0"
                Command="{Binding nextBtn}"
                Content="Trang sau" />
        </StackPanel>
    </Grid>
</Page>
